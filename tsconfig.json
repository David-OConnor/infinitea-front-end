{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "module": "esnext",
    "target": "es2017",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": false,
    "declaration": true
  },
  "include": [
    "src/**/*"
    ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
